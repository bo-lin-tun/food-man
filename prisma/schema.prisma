generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id             String         @id @default(uuid())
  name           String
  street         String?
  township       String?
  mainTheme      String?
  city           String?
  isArchived     Boolean        @default(false)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  locations      Location[]
  menuCategories MenuCategory[]
  users          User[]
}

model Location {
  id                           String                         @id @default(uuid())
  name                         String
  street                       String
  township                     String
  city                         String
  companyId                    String
  isArchived                   Boolean                        @default(false)
  createdAt                    DateTime                       @default(now())
  updatedAt                    DateTime                       @updatedAt
  disabledLocationMenu         DisabledLocationMenu[]
  disabledLocationMenuCategory DisabledLocationMenuCategory[]
  company                      Company                        @relation(fields: [companyId], references: [id])
  tables                       Table[]
}

model MenuCategory {
  id                           String                         @id @default(uuid())
  name                         String
  companyId                    String
  isArchived                   Boolean                        @default(false)
  createdAt                    DateTime                       @default(now())
  updatedAt                    DateTime                       @updatedAt
  disabledLocationMenuCategory DisabledLocationMenuCategory[]
  company                      Company                        @relation(fields: [companyId], references: [id])
  menuCategoryMenu             MenuCategoryMenu[]
}

model DisabledLocationMenuCategory {
  id             String       @id @default(uuid())
  locationId     String
  menuCategoryId String
  isArchived     Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  location       Location     @relation(fields: [locationId], references: [id])
  menuCategory   MenuCategory @relation(fields: [menuCategoryId], references: [id])
}

model Menu {
  id                   String                 @id @default(uuid())
  name                 String
  price                Int                    @default(0)
  description          String?
  assetUrl             String?
  isArchived           Boolean                @default(false)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  disabledLocationMenu DisabledLocationMenu[]
  menuAddonCategory    MenuAddonCategory[]
  menuCategoryMenu     MenuCategoryMenu[]
  Order                Order[]
}

model DisabledLocationMenu {
  id         String   @id @default(uuid())
  locationId String
  menuId     String
  isArchived Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  location   Location @relation(fields: [locationId], references: [id])
  menu       Menu     @relation(fields: [menuId], references: [id])
}

model MenuCategoryMenu {
  id             String       @id @default(uuid())
  menuCategoryId String
  menuId         String
  isArchived     Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  menuCategory   MenuCategory @relation(fields: [menuCategoryId], references: [id])
  menu           Menu         @relation(fields: [menuId], references: [id])
}

model AddonCategory {
  id                String              @id @default(uuid())
  name              String
  isRequired        Boolean             @default(true)
  isArchived        Boolean             @default(false)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  addons            Addon[]
  menuAddonCategory MenuAddonCategory[]
}

model MenuAddonCategory {
  id              String        @id @default(uuid())
  menuId          String
  addonCategoryId String
  isArchived      Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  addonCategory   AddonCategory @relation(fields: [addonCategoryId], references: [id])
  menu            Menu          @relation(fields: [menuId], references: [id])
}

model Addon {
  id              String        @id @default(uuid())
  name            String
  price           Int           @default(0)
  addonCategoryId String
  isArchived      Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  addonCategory   AddonCategory @relation(fields: [addonCategoryId], references: [id])
  Order           Order[]
}

model Order {
  id         String      @id @default(uuid())
  menuId     String
  addonId    String?
  quantity   Int
  orderSeq   String
  itemId     String
  status     ORDERSTATUS
  totalPrice Int
  tableId    String
  isArchived Boolean     @default(false)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  addon      Addon?      @relation(fields: [addonId], references: [id])
  menu       Menu        @relation(fields: [menuId], references: [id])
  table      Table       @relation(fields: [tableId], references: [id])
}

model Table {
  id         String   @id @default(uuid())
  name       String
  locationId String
  assetUrl   String
  isArchived Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  orders     Order[]
  location   Location @relation(fields: [locationId], references: [id])
}

model User {
  id            String    @id @default(uuid())
  email         String
  name          String?
  password      String?
  emailVerified DateTime?
  role          UserRole  @default(SUB_ADMIN)
  companyId     String
  isFirtTime    Boolean   @default(true)
  company       Company   @relation(fields: [companyId], references: [id])
}

enum UserRole {
  AMDIN
  SUB_ADMIN
}

model VerificationCode {
  id    String @id @default(uuid())
  email String
  token String @unique

  @@unique([email, token])
}

enum ORDERSTATUS {
  PENDING
  COOKING
  SEND
  COMPLETE
}
